//3. Declara variables con valores asociados a todos los tipos de datos y imprimelos en la consola
let texto = "Hola, soy Juan"; // Cadena de texto
console.log(texto);
let numero = 15; // Número
console.log(numero);
let booleano = true; // Booleano
console.log(booleano);
let nulo = null; // Nulo
console.log(nulo);

//4.Modifica los valores de las variables por otros valores y vuelve a imprimirlos en la consola.

texto = "Hola, he cambiado el nombre";
console.log(texto);
numero = 10;
console.log(numero);
booleano = false;
console.log(booleano);

//5. Declara constantes con valores asociados a todos los tipos de datos y imprimelos en la consola.

const texto1 = "Constante";
console.log(texto1);
const numero1 = 25;
console.log(numero1);
const booleano1 = false;
console.log(booleano1);
const nulo1 = null;
console.log(nulo1);

//6. Crea una variable para cada operador aritmetico y muestra su resultado en la consola.

let suma = 5 + 7;
console.log(suma);
let resta = 10 - 3;
console.log(resta);
let division = 20 / 4;
console.log(division);
let multiplicacion = 6 * 3;
console.log(multiplicacion);
let modulo = 10 % 3;
console.log(modulo);

//7. Crea una variable para cada operador de asignacion y muestra su resultado en la consola.

let variable1 = 10;
console.log(variable1);
variable1 += 5;
console.log(variable1);
variable1 -= 3;
console.log(variable1);
variable1 *= 2;
console.log(variable1);
variable1 /= 4;
console.log(variable1);
variable1 %= 3;
console.log(variable1);

//8. Crea una variable para cada operador de comparacion y muestra su resultado en la consola.

let a = 5;
let b = "7";
console.log(a==b);
console.log(a===b);
console.log(a!=b);
console.log(a!==b);
console.log(a>b);
console.log(a<b);
console.log(a>=b);
console.log(a<=b);

//9. Crea una variable pcon un operador lógico y muestra su resultado en la consola.(AND y OR)

let c = 10;
let d = 5;
console.log(a>3 && b<10);
console.log(!(a>3 || b<5));

